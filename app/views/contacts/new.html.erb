<% content_for :title, "Contact" %>

  <div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
          <%= image_tag "img-01.png", alt: "IMG"%>
			</div>

			<form class="contact1-form validate-form">
			<%= form_for (Contact.new), class: "contact1-form validate-form" do |f| %>
				<span class="contact1-form-title">
					Contactez nous
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<%= f.text_field :first_name, placeholder:"PrÃ©nom", class: "input1" %>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<%= f.text_field :last_name, placeholder:"Nom", class: "input1" %>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
					<%= f.text_field :email, placeholder:"email", class: "input1" %>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Message is required">
					<%= f.text_area :message, placeholder:"Message", class: "input1" %>
					<span class="shadow-input1"></span>
				</div>

				<div class="container-contact1-form-btn">
          <%= f.submit  "Envoyer", class: "contact1-form-btn" %>					
				</div>
			<%end%>
		</div>
	</div>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>