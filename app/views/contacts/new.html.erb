<section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Contact Us</h2>
          <h3 class="section-subheading text-muted">Ask us any question !</h3>
        </div>
      </div>
        <%= form_for (Contact.new) do |f| %>
      <div class="row">
        <div class="col-lg-12">
          First name: <%= f.text_field :first_name %><br/>
        </div>
        <div class="col-lg-12">
          Last name : <%= f.text_field :last_name %><br/>
        </div>
        <div class="col-lg-12">
          Email : <%= f.text_field :email %><br/>
        </div>
        <div class="col-lg-12">
          Description  : <%= f.text_area :message %><br />
        </div>
        <div class="col-lg-12">
          <%= f.submit %>
        <% end %>
        </div>
      </div>
    </div>
  </section>