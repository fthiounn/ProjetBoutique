<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Créer un compte</h4>

<%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  
  <div class="form-group input-group">
		<div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
      <%=f.text_field :first_name, placeholder: "Prénom", class: "form-control",size: "50" %>
    </div>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
         <%=f.text_field :last_name, placeholder: "Nom", class: "form-control",size: "50" %>
    </div>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
      <%=f.text_field :email, placeholder: "Email", class: "form-control", size: "50"%>
    </div>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
      <%=f.text_field :description, placeholder: "Description", class: "form-control", size: "50" %>
    </div>
    <!-- form-group end.// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		  </div>
      <%=f.text_field :password, class: "form-control", placeholder: "Mot de passe", type: "password",size: "50"%>
    </div> 
    <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		  </div>
      <%=f.text_field :password_confirmation, placeholder: "Confirmation du mot de passe", class: "form-control", type: "password",size: "50"%>
    </div> 
    <!-- form-group// --> 
    <p>Photo de profil :</p>
     <div class="form-group input-group">
        <div class="input-group-prepend">
          <%= f.file_field :avatar %>
        </div>
    </div>                                     
    <div class="form-group">
      <%= f.submit  "Créer", class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->  
   <%end%>
  <%= render "devise/shared/links" %>
    </article>
</div> 
<!--container end.//-->